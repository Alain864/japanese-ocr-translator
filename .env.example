# =============================================================================
# Japanese OCR Translator - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# API Keys (Required)
# -----------------------------------------------------------------------------

# Google Cloud Vision API Key for OCR text detection
# Get your key from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key-here

# OpenAI API Key for translation
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# -----------------------------------------------------------------------------
# OpenAI Settings
# -----------------------------------------------------------------------------

# Model to use for translation
MODEL=gpt-4o

# Retry settings for API calls
MAX_RETRIES=3
RETRY_DELAY_SECONDS=2

# -----------------------------------------------------------------------------
# PDF Processing
# -----------------------------------------------------------------------------

# DPI for PDF to image conversion (higher = sharper, but slower)
DPI=200

# -----------------------------------------------------------------------------
# Text Replacement
# -----------------------------------------------------------------------------

# Enable/disable text replacement in images
ENABLE_TEXT_REPLACEMENT=true

# Font for English text rendering
ENGLISH_FONT=Arial.ttf

# Fallback font if primary not found
FALLBACK_FONT=DejaVuSans.ttf

# Background fill color (RGB) - white for covering Japanese text
BACKGROUND_FILL_COLOR=255,255,255

# Padding around bounding box (pixels)
BBOX_PADDING=5

# Minimum font size when auto-shrinking text to fit
MIN_FONT_SIZE=8

# -----------------------------------------------------------------------------
# Paths
# -----------------------------------------------------------------------------

# Input folder for PDF files
INPUT_FOLDER=./input

# Output folder for results
OUTPUT_FOLDER=./output

# Log folder
LOG_FOLDER=./logs